# Drug History API Configuration
# Copy this file to .env and configure as needed

# Optional: openFDA API key for higher rate limits (120,000 requests/day vs 240/minute)
# Get a key at: https://open.fda.gov/apis/authentication/
OPENFDA_API_KEY=

# DeepSeek-OCR-2 Service on RunPod
# Format: https://{pod_id}-8000.proxy.runpod.net
OCR_SERVICE_URL=https://api.runpod.ai/v2/qapobo6yo6o9rf/run

# Cache TTL in seconds (default: 3600 = 1 hour)
CACHE_TTL=3600

# HTTP request timeout in seconds (default: 30)
REQUEST_TIMEOUT=30

# Maximum concurrent requests to external APIs (default: 10)
MAX_CONCURRENT_REQUESTS=10

# Debug mode - enables auto-reload (default: false)
DEBUG=false
